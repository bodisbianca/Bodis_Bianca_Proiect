@page
@model Bodis_Bianca_Proiect.Pages.Species.EditModel

@{
    ViewData["Title"] = "Editare specie";
}

<h1>Editare specie</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Specie.ID" />
            <div class="form-group">
                <label asp-for="Specie.SpecieName" class="control-label"></label>
                <input asp-for="Specie.SpecieName" class="form-control" />
                <span asp-validation-for="Specie.SpecieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specie.DifIntretinere" class="control-label"></label>
                <input asp-for="Specie.DifIntretinere" class="form-control" />
                <span asp-validation-for="Specie.DifIntretinere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specie.VarstaMaxima" class="control-label"></label>
                <input asp-for="Specie.VarstaMaxima" class="form-control" />
                <span asp-validation-for="Specie.VarstaMaxima" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specie.DetaliiSpecie" class="control-label"></label>
                <input asp-for="Specie.DetaliiSpecie" class="form-control" />
                <span asp-validation-for="Specie.DetaliiSpecie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvare" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Înapoi la lista de specii</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
