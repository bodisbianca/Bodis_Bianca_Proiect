@page
@model Bodis_Bianca_Proiect.Pages.Traits.EditModel

@{
    ViewData["Title"] = "Editare trăsătură";
}

<h1>Editare trăsătură</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Trait.ID" />
            <div class="form-group">
                <label asp-for="Trait.TraitName" class="control-label"></label>
                <input asp-for="Trait.TraitName" class="form-control" />
                <span asp-validation-for="Trait.TraitName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trait.Avantaje" class="control-label"></label>
                <input asp-for="Trait.Avantaje" class="form-control" />
                <span asp-validation-for="Trait.Avantaje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trait.Dezavantaje" class="control-label"></label>
                <input asp-for="Trait.Dezavantaje" class="form-control" />
                <span asp-validation-for="Trait.Dezavantaje" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trait.TraitDetails" class="control-label"></label>
                <input asp-for="Trait.TraitDetails" class="form-control" />
                <span asp-validation-for="Trait.TraitDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvare" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Înapoi la lista de trăsături</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
